# Database Configuration
DATABASE_URL=sqlite:///./bewerbungs_agent.db
# For PostgreSQL: postgresql://user:password@localhost:5432/bewerbungs_agent

# Gmail API
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8080/oauth2callback

# OpenAI API (for document generation)
# Optional: Only needed if using AI for cover letter generation
OPENAI_API_KEY=your_openai_key_here

# Stripe (for SaaS subscriptions)
# For testing only - never commit real keys
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
SECRET_KEY=change_this_to_random_string_in_production

# Multi-tenant Settings
MAX_APPLICATIONS_FREE=10
MAX_APPLICATIONS_PRO=100
MAX_APPLICATIONS_AGENCY=unlimited
